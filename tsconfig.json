{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@api/*": ["ts/api/*"],
      "@components/*": ["ts/components/*"],
      "@utils/*": ["ts/utils/*"],
      "@types/*": ["ts/types/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
